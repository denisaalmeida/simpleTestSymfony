{% extends 'base.html.twig' %}
{% block title %}Teste - Home
{% endblock %}
{% block pageScript %}{% endblock %}
{% block nav %}{% endblock %}

{% block container %}
    {% for message in app.flashes('notice') %}
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>{{ message }}</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>{{ message }}</strong>
                    Por favor tente novamente
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Controle de Acessos</h5>
                    <form class="form-signin" method="post" action="{{ path('home')|escape('html') }}">
                        <div class="form-label-group">
                            {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder':'Usuário' } }) }}
                            <label for="login_form_username">Usuário</label>
                        </div>
                        <div class="form-label-group">
                            {{ form_widget(form.password, { 'attr': {'class': 'form-control', 'placeholder':'Senha' } }) }}
                            <label for="login_form_password">Senha</label>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Login</button>
                        <a href="{{ path('create_account')|escape('html') }}" class="btn btn-lg btn-info btn-block text-uppercase">Registrar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
